public class Company {
    private static Company instance;


    private Company(){}


    public static Company getCard() {
        if (instance==null){
            instance=new Company();
        }
        return instance;
    }


    public void getinfo(){
        System.out.println("카드 회사입니다.");
    }
}



-----

public class Test {
    public static void main(String argc[]){


        Company google= Company.getInstance();
        Company T1=Company.getInstance();


        T1.getinfo();


        System.out.println(google==T1);
    }
}
